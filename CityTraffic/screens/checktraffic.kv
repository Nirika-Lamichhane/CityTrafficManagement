<DashboardScreen>:
    BoxLayout:
        orientation: 'vertical'

        # Header section for origin and destination inputs
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            orientation: 'horizontal'

            Label:
                text: 'Origin:'
                size_hint_x: None
                width: '100dp'

            TextInput:
                id: origin_input
                hint_text: 'Enter Origin City'
                size_hint_x: None
                width: '200dp'

            Label:
                text: 'Destination:'
                size_hint_x: None
                width: '100dp'

            TextInput:
                id: destination_input
                hint_text: 'Enter Destination City'
                size_hint_x: None
                width: '200dp'

        # Content section where the traffic status will be displayed
        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10

            Label:
                id: content_label
                text: "Traffic status will appear here."
                size_hint_y: None
                height: '40dp'

            Button:
                text: 'Check Traffic'
                on_press: root.on_check_traffic()
                size_hint_y: None
                height: '50dp'
