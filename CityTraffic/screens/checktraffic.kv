# check_traffic_screen.kv

<CheckTrafficScreen>:
    name: 'check_traffic'

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Check Traffic Status"
            font_size: '24sp'
            size_hint_y: None
            height: self.texture_size[1]

        TextInput:
            id: origin_input
            hint_text: "Enter Origin"
            multiline: False
            size_hint_y: None
            height: 40

        TextInput:
            id: destination_input
            hint_text: "Enter Destination"
            multiline: False
            size_hint_y: None
            height: 40

        Button:
            text: "Check Traffic"
            size_hint_y: None
            height: 50
            on_press: root.check_traffic()

        Label:
            id: result_label
            text: ""
            font_size: '18sp'
            halign: "center"
            valign: "middle"
            text_size: self.width, None

        Button:
            text: "Back to Dashboard"
            size_hint_y: None
            height: 40
            on_press:
                root.manager.current = 'dashboard'
