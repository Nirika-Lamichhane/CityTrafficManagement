#:kivy 2.0.0

<RegisterScreen>:
    name: "register"

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(40)
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # white background
            Rectangle:
                pos: self.pos
                size: self.size

        # Top Logo/Image
        Image:
            source: 'assets/Sign-check-icon.png'  # Update with your actual logo file name
            size_hint: None, None
            size: dp(80), dp(80)
            pos_hint: {'center_x': 0.5}

        # Center Form Box
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: dp(400), dp(460)
            pos_hint: {'center_x': 0.5}
            spacing: dp(20)
            padding: dp(25)
            canvas.before:
                Color:
                    rgba: 0.94, 0.94, 0.94, 1  # Light gray
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
                Color:
                    rgba: 0, 0.4, 1, 1  # Border color
                Line:
                    width: 1.4
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 20)

            # Title
            Label:
                text: "Register"
                font_size: '22sp'
                bold: True
                size_hint_y: None
                height: dp(40)
                color: 0, 0, 0, 1

            # Username Field
            TextInput:
                id: reg_username
                hint_text: "New Username"
                multiline: False
                size_hint_y: None
                height: dp(40)
                padding: dp(10)

            # Password Field
            TextInput:
                id: reg_password
                hint_text: "New Password"
                multiline: False
                password: True
                size_hint_y: None
                height: dp(40)
                padding: dp(10)

            # Register Button
            Button:
                text: "Register"
                background_color: 0, 0.5, 0, 1
                color: 1, 1, 1, 1
                size_hint_y: None
                height: dp(40)
                on_release:
                    root.register_user()

            # Back to Login
            Button:
                text: "Back to Login"
                background_color: 0.1, 0.1, 0.1, 1
                color: 1, 1, 1, 1
                size_hint_y: None
                height: dp(40)
                on_release:
                    root.manager.current = "login"
