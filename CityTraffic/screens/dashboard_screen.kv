<DashboardScreen>:
    BoxLayout:
        orientation: 'horizontal'

        # Sidebar
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: dp(200)
            padding: dp(15)
            spacing: dp(20)

            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.95, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: 0.8, 0.8, 0.8, 1
                Rectangle:
                    pos: self.right - dp(1), self.y
                    size: dp(1), self.height

            # --- Navigation Buttons ---
            Button:
                id: check_traffic_btn
                text: "Check Traffic"
                size_hint_y: None
                height: dp(55)
                background_color: 0.68, 0.85, 0.90, 1
                background_normal: ''
                color: 0, 0, 0, 1
                font_size: '18sp'
                bold: True
                on_release: root.manager.current='check_traffic'
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(10),]
                    Color:
                        rgba: 0, 0, 0, 0.2
                    RoundedRectangle:
                        pos: self.x + dp(2), self.y - dp(2)
                        size: self.width, self.height
                        radius: [dp(10),]

            Button:
                id: shortest_path_btn
                text: "Shortest Path"
                size_hint_y: None
                height: dp(55)
                background_color: 0.68, 0.85, 0.90, 1
                background_normal: ''
                color: 0, 0, 0, 1
                font_size: '18sp'
                bold: True
                on_release: root.manager.current='shortest_path'
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(10),]
                    Color:
                        rgba: 0, 0, 0, 0.2
                    RoundedRectangle:
                        pos: self.x + dp(2), self.y - dp(2)
                        size: self.width, self.height
                        radius: [dp(10),]

            # Spacer
            Widget:
                size_hint_y: 1

            # Toggle Notification Button
            Button:
                id: notification_btn
                text: "Enable Notifications" if not app.notifications_enabled else "Disable Notifications"
                size_hint_y: None
                height: dp(55)
                background_color: (0.2, 0.6, 0.2, 1) if not app.notifications_enabled else (0.8, 0.2, 0.2, 1)
                background_normal: ''
                color: 1, 1, 1, 1
                font_size: '18sp'
                bold: True
                on_release: app.ask_notification_permission()
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(10),]
                    Color:
                        rgba: 0, 0, 0, 0.2
                    RoundedRectangle:
                        pos: self.x + dp(2), self.y - dp(2)
                        size: self.width, self.height
                        radius: [dp(10),]

            # Logout Button
            Button:
                id: logout_btn
                text: "Logout"
                size_hint_y: None
                height: dp(55)
                background_color: 0.8, 0.2, 0.2, 1
                background_normal: ''
                color: 1, 1, 1, 1
                font_size: '18sp'
                bold: True
                on_release: root.logout()
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(10),]
                    Color:
                        rgba: 0, 0, 0, 0.2
                    RoundedRectangle:
                        pos: self.x + dp(2), self.y - dp(2)
                        size: self.width, self.height
                        radius: [dp(10),]

        # Main Content Area
        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(10)

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Welcome to the Dashboard"
                font_size: '30sp'
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: dp(60)
                text_size: self.width, None
                color: 0.1, 0.1, 0.1, 1
                canvas.before:
                    Color:
                        rgba: 0.95, 0.95, 0.95, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

            Widget:
                size_hint_y: 1

            Image:
                source: 'assets/traffic.jpg'
                size_hint: (1, None)
                height: dp(200)
                allow_stretch: True
                keep_ratio: True

            Label:
                text: "The solution for all cities!!."
                font_size: '30sp'
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: dp(60)
                text_size: self.width, None
                color: 0.1, 0.1, 0.1, 1

            Image:
                source: 'assets/shortest.jpg'
                size_hint: (1, None)
                height: dp(200)
                allow_stretch: True
                keep_ratio: True

            Widget:
                size_hint_y: 1
