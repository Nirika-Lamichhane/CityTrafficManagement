<DashboardScreen>:
    BoxLayout:
        orientation: 'horizontal'

        # Sidebar
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: dp(180)
            padding: dp(10)
            spacing: dp(15)

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: "Check Traffic"
                size_hint_y: 1
                background_color: 0.68, 0.85, 0.90, 1
                background_normal: ''
                color: 0, 0, 0, 1
                font_size: '18sp'
                on_press: root.manager.current='check_traffic'

            Button:
                text: "Shortest Path"
                size_hint_y: 1
                background_color: 0.68, 0.85, 0.90, 1
                background_normal: ''
                color: 0, 0, 0, 1
                font_size: '18sp'
                on_press: root.manager.current

            Button:
                text: "Alternative Routes"
                size_hint_y: 1
                background_color: 0.68, 0.85, 0.90, 1
                background_normal: ''
                color: 0, 0, 0, 1
                font_size: '18sp'


        # Main Content Area
        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(10)

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Welcome to the Dashboard"
                font_size: '30sp'
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: dp(60)
                text_size: self.width, None
                color: 0.1, 0.1, 0.1, 1
                canvas.before:
                    Color:
                        rgba: 1.5, 1.5, 1.5, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

            Widget:
                size_hint_y: 1

            # First Image
            Image:
                source: 'assets/traffic.jpg'
                size_hint: (1, None)
                height: dp(200)
                allow_stretch: True
                keep_ratio: True

            Label:
                text: "The solution for all cities!!."
                font_size: '30sp'
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: dp(60)
                text_size: self.width, None
                color: 0.1, 0.1, 0.1, 1

            # Second Image
            Image:
                source: 'assets/shortest.jpg'
                size_hint: (1, None)
                height: dp(200)
                allow_stretch: True
                keep_ratio: True

            Widget:
                size_hint_y: 1
