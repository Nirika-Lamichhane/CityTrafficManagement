<LoginScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # White background for AnchorLayout
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                width: min(self.parent.width * 0.9, 400)
                height: self.minimum_height
                spacing: dp(20)
                padding: dp(30)

                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background for BoxLayout
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15]

                    Color:
                        rgba: 0.7, 0.7, 0.7, 1  # Light gray border color
                    Line:
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 15)
                        width: 1.2  # Border thickness

                Image:
                    source: 'assets/icons.jpg'
                    size_hint_y: None
                    height: dp(150)
                    allow_stretch: True
                    keep_ratio: True

                Label:
                    text: "City Traffic Management"
                    font_size: '24sp'
                    bold: True
                    size_hint_y: None
                    height: self.texture_size[1] + dp(15)
                    color: 0.1, 0.1, 0.1, 1
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.width, None

                TextInput:
                    id: username
                    hint_text: "Username"
                    size_hint_y: None
                    height: dp(50)
                    multiline: False
                    padding: [dp(15)] * 4
                    halign: 'center'
                    valign: 'middle'

                TextInput:
                    id: password
                    hint_text: "Password"
                    password: True
                    size_hint_y: None
                    height: dp(50)
                    multiline: False
                    padding: [dp(15)] * 4
                    halign: 'center'
                    valign: 'middle'

                Button:
                    text: "Login"
                    size_hint_y: None
                    height: dp(55)
                    background_color: 0.2, 0.6, 0.8, 1
                    color: 1, 1, 1, 1
                    font_size: '18sp'
                    on_release: root.login()

                Label:
                    markup: True
                    text: "[ref=register][color=0066cc]Don't have an account? Register here[/color][/ref]"
                    size_hint_y: None
                    height: dp(30)
                    halign: 'center'
                    valign: 'middle'
                    on_ref_press:
                        root.go_to_register()

