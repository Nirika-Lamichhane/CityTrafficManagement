<LoginScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: 'vertical'
                size_hint: None, None
                width: min(self.parent.width * 0.9, 400)
                height: self.minimum_height
                spacing: dp(20)
                padding: dp(20)

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1.5
                        rounded_rectangle: (self.x, self.y, self.width, self.height, 10)
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]

                Image:
                    source: 'assets/icons.jpg'
                    size_hint_y: None
                    height: dp(180)

                Label:
                    text: "City Traffic Management"
                    font_size: '22sp'
                    size_hint_y: None
                    height: self.texture_size[1] + dp(10)
                    color: 0.1, 0.1, 0.1, 1
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.width, None

                TextInput:
                    id: username
                    hint_text: "Username"
                    size_hint_y: None
                    height: dp(48)
                    multiline: False

                TextInput:
                    id: password
                    hint_text: "Password"
                    password: True
                    size_hint_y: None
                    height: dp(48)
                    multiline: False

                Button:
                    text: "Login"
                    size_hint_y: None
                    height: dp(50)
                    background_color: 0.3, 0.7, 0.9, 1
                    color: 1, 1, 1, 1
                    on_release: root.login()
